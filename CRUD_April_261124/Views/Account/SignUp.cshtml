@model CRUD_April_261124.Models.validationClasses.loginClass
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignUp</title>
</head>
<body>
    <div> 
       
        @using (Html.BeginForm("SignUp", "Account",FormMethod.Post))
        {
        <table>
            <tr><td>@Html.LabelFor(x => x.userID)</td><td>@Html.TextBoxFor(x => x.userID)</td><td>@Html.ValidationMessageFor(x=>x.userID)</td></tr>
            <tr><td>@Html.LabelFor(x => x.password)</td><td>@Html.TextBoxFor(x => x.password)</td><td>@Html.ValidationMessageFor(x=>x.password)</td></tr>
            <tr><td colspan="3"><input type="submit" value="Submit"> <input type="reset" value="Reset" /></td></tr>
        </table>
        }
    </div>
</body>
</html>
